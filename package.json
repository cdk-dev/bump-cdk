{
  "name": "bump-cdk",
  "version": "0.1.4",
  "description": "Easily manage AWS CDK Dependencies",
  "homepage": "https://github.com/cdk-tools/bump-cdk#readme",
  "bugs": {
    "url": "https://github.com/cdk-tools/bump-cdk/issues",
    "email": "issues@cdk.tools"
  },
  "license": "MIT",
  "author": {
    "name": "Joe Snell",
    "email": "joepsnell@gmail.com",
    "url": "https://github.com/wulfmann"
  },
  "keywords": [
    "aws",
    "aws-cdk",
    "cdk",
    "version-management",
    "cli",
    "tool"
  ],
  "scripts": {
    "dev": "tsc -w",
    "build:ts": "tsc",
    "build:cli": "chmod +x bin/bump-cdk",
    "build": "yarn build:ts && yarn build:cli",
    "format": "prettier . --write"
  },
  "repository": {
    "directory": "packages/bump-cdk",
    "type": "git",
    "url": "https://github.com/cdk-tools/bump-cdk"
  },
  "bin": {
    "bump-cdk": "./bin/bump-cdk"
  },
  "files": [
    "bin",
    "lib"
  ],
  "dependencies": {
    "arg": "^4.1.3",
    "chalk": "^4.1.0",
    "package-json": "^6.5.0"
  },
  "devDependencies": {
    "prettier": "^2.0.5",
    "typescript": "^3.9.6"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
